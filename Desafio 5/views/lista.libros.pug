.container.d-flex.justify-content-center.align-items-center.bg-secondary.vh-100
  .col-6
    .card.bg-dark.bg-gradient.text-white
      .card-header.bg-dark.text-center.d-flex.justify-content-between.align-items-center
        strong Lista de productos
        a.btn.btn-primary(href='/pug/' role='button') Nuevo producto
      .card-body
        if books.length > 0
          table.table.table-bordered.text-white
            thead
              tr.text-center
                th Nombre
                th Precio
                th Foto
            tbody
              each book in books
                  tr.text-center
                  td= book.name 
                  td= book.price
                  td.w-25.h-25
                      img.img-thumbnail(src=book.img alt=book.name)
        else
          p.text-white No hay productos