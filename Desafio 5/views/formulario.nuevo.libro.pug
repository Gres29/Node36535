.container.d-flex.justify-content-center.align-items-center.bg-secondary.vh-100
  .col-4
    .card.bg-dark.bg-gradient.text-white
      .card-header.bg-dark.text-center.d-flex.justify-content-between.align-items-center
        strong Agregar nuevo producto
        a.btn.btn-primary(href='/pug/productos' role='button') Lista de productos
      .card-body
        form(action="/pug/productos", method="post") 
          .mb-3
            label.form-label(for='book-author') Autor
            input#book-author.form-control(type='text' name='book-author')
          .mb-3
            label.form-label(for='book-name') Nombre del Libro
            input#book-name.form-control(type='text' name='book-name')
          .mb-3
            label.form-label(for='book-price') Precio
            .input-group.mb-3
              span.input-group-text $
              input#book-price.form-control(type='number' name='book-price' min='0' step='0.01')
          .mb-3
            label.form-label(for='book-img') URL Imagen
            input#book-img.form-control(type='text' name='book-img')
          .mb-3
            label.form-label(for='book-publication-year') A&ntilde;o de Publicacion
            input#book-publication-year.form-control(type='number' name='book-publication-year' min='0')
          .mb-3.invisible
            input.form-control(type='text' value='pug' name='template-engine')
          .d-grid.gap-2.col-6.mx-auto
            button.btn.btn-dark.border.border-light(type='submit')
              strong Submit